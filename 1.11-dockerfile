FROM openjdk:8
EXPOSE 8080
WORKDIR /usr/src/app
RUN apt-get update && apt-get install --yes git
RUN git clone https://github.com/docker-hy/material-applications
RUN cd material-applications/spring-example-project && ./mvnw package
CMD java -jar /usr/src/app/material-applications/spring-example-project/target/docker-example-1.1.3.jar

